.box{
    position: fixed;
    top: 50%;
    background: #fff;
    border-radius: 8rpx;
    z-index: 99999;
    left: 50%;
    transform: translate(-50%,-50%);
    padding: 40rpx 40rpx;
    padding-top:10rpx;
    max-height: 95%;
    overflow-y: scroll;

}
.shade{
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.5;
    position: fixed;
    z-index: 99998;
    top: 0;
    left: 0;
}
.close {
    width: 30rpx;
    padding: 15rpx;
    padding-top: 25rpx;
    padding-left: 25rpx;
    float: right;
    position: relative;
    left: 25rpx;
}
.btn{

    display: inline-block;
    background: #3CD32E;
    color: #fff;
    border-radius: 6rpx;
    width: 100%;
    text-align: center;
    padding: 20rpx 0;
    margin-top: 50rpx;

}