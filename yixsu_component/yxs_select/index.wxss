.input{

    border-radius: 5rpx;
    padding: 0rpx 10rpx;
}
.input-title{
    font-size: 30rpx;
    margin-bottom: 10rpx;
}

.input-error{
    border: 1rpx solid red;
}

.error-info{
    color: red;
    font-size: 24rpx;
}
.list{
    position: absolute;
    top: 0;
    left: 0;
    background: #fff;
    width: 100%;
    z-index: 999;
    max-height: 500rpx;
    overflow-y: scroll;
    border: 1rpx solid #ccc;
    border-bottom: none;
}
.item{
    width: 100%;
    height:70rpx;
    line-height: 70rpx;
    text-align: center;
    border-bottom: 1rpx solid #ccc;


}